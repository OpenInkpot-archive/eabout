	install -m644 vendors/v3.conf debian/eabout-settings-v3/etc/eabout.conf

binary-post-install/eabout-settings-v3ext::
	install -m644 vendors/v3ext.conf debian/eabout-settings-v3ext/etc/eabout.conf
